{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - {{ parent() }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4"><i class="bi bi-gear-fill"></i> Admin Dashboard</h1>
    </div>
</div>

<h2 class="h4 mb-3">Ãœbersicht</h2>
<div class="row row-cols-2 row-cols-md-3 row-cols-xl-5 g-3 mb-4">
    <div class="col">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-diagram-3" style="font-size: 2rem;"></i>
                <h3 class="mt-2">{{ stats.baseTypes }}</h3>
                <p class="mb-2">BaseTypes</p>
                <a href="{{ path('app_admin_base_types') }}" class="btn btn-light btn-sm">Verwalten</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-collection" style="font-size: 2rem;"></i>
                <h3 class="mt-2">{{ stats.onboardingTypes }}</h3>
                <p class="mb-2">OnboardingTypes</p>
                <a href="{{ path('app_admin_onboarding_types') }}" class="btn btn-light btn-sm">Verwalten</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-warning text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-person-badge" style="font-size: 2rem;"></i>
                <h3 class="mt-2">{{ stats.roles }}</h3>
                <p class="mb-2">Rollen</p>
                <a href="{{ path('app_admin_roles') }}" class="btn btn-light btn-sm">Verwalten</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-info text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-card-list" style="font-size: 2rem;"></i>
                <h3 class="mt-2">{{ stats.taskBlocks }}</h3>
                <p class="mb-2">TaskBlocks</p>
                <a href="{{ path('app_admin_task_blocks') }}" class="btn btn-light btn-sm">Verwalten</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card bg-secondary text-white h-100">
            <div class="card-body text-center">
                <i class="bi bi-people" style="font-size: 2rem;"></i>
                <h3 class="mt-2">{{ stats.users }}</h3>
                <p class="mb-2">Benutzer</p>
                <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Verwalten</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Schnellaktionen</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Neue Elemente erstellen:</h6>
                        <div class="list-group">
                            <a href="{{ path('app_admin_base_type_new') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-plus-circle"></i> Neuen BaseType erstellen
                            </a>
                            <a href="{{ path('app_admin_role_new') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-plus-circle"></i> Neue Rolle erstellen
                            </a>
                            <a href="{{ path('app_admin_onboarding_type_new') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-plus-circle"></i> Neuen OnboardingType erstellen
                            </a>
                            <a href="{{ path('app_admin_user_new') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-plus-circle"></i> Neuen Benutzer erstellen
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>System-Funktionen:</h6>
                        <div class="list-group">
                            <a href="{{ path('app_admin_email_settings') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-envelope-gear"></i> E-Mail-Einstellungen
                            </a>
                            <a href="{{ path('app_admin_users') }}" class="list-group-item list-group-item-action">
                                <i class="bi bi-people"></i> Benutzer verwalten
                            </a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
